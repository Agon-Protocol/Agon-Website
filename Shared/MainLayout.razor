@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        Agon Protocol
        <MudSpacer />
        <Profile />
    </MudAppBar>
    <MudDrawer @bind-Open="@_isDrawerOpen">
        <NavMenu />
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Text" Class="mt-auto mx-auto">
            <MudIconButton Icon="@Icons.Custom.Brands.Twitter" Target="_blank" Link="https://twitter.com/AgonBet"></MudIconButton>
            <MudIconButton Icon="@Icons.Custom.Brands.Discord" Target="_blank" Link="https://discord.gg/DvVHqGbqYy"></MudIconButton>
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Target="_blank" Link="https://github.com/Agon-Protocol"></MudIconButton>
        </MudButtonGroup>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDrawerOpen = true;

    private void ToggleDrawer() => _isDrawerOpen = !_isDrawerOpen;
}